      <% @my_posts.each do |p| %>
        <% if p.image.present? %>
          <%= image_tag "#{p.image}" %>
        <% else %>
          <%= image_tag "https://placehold.it/300x300" %>
        <% end %>
      <% end %>
    </div>
  </div>
